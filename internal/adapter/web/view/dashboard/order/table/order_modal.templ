package views

templ OrderModal() {
	<div class="modal fade" tabindex="-1" :class="{ 'show d-block': showModal }" aria-labelledby="orderDetailsLabel" aria-hidden="false" style="background-color: rgba(0, 0, 0, 0.7); transition: all 0.3s ease-in-out;">
		<div class="modal-dialog modal-xl modal-dialog-centered ">
			<div class="modal-content shadow-lg border-0 rounded-2 ">
				<div class="modal-header border-0 pb-0 pt-4 px-4">
					<h5 class="modal-title text-primary fw-bold" id="orderDetailsLabel">
						<i class="bi bi-receipt-cutoff me-2"></i>Order Details
					</h5>
					<button type="button" class="btn-close" aria-label="Close" @click="closeModal"></button>
				</div>
				<div class="modal-body pt-0 pb-4 px-4">
					<div class="row g-4 mt-2">
						<!-- Billing Column -->
						<div class="col-md-6 pe-md-4">
							<div class="bg-body-secondary p-3 rounded-2 h-100 px-6 py-5 border">
								<div class="d-flex justify-content-between align-items-center mb-3">
									<h6 class="text-muted fw-bold mb-0">
										<i class="bi bi-credit-card me-2"></i>Billing Information
									</h6>
									<button class="btn btn-sm btn-outline-primary" @click="toggleEditBilling">
										<i class="bi bi-pencil-square me-1"></i>Edit
									</button>
								</div>
								<form>
									<div class="row">
										<div class="col-md-6 mb-3">
											<label class="form-label small text-muted">First Name</label>
											<input type="text" class="form-control form-control-sm" x-model="modalOrder.billing.first_name" :readonly="!editableBilling"/>
										</div>
										<div class="col-md-6 mb-3">
											<label class="form-label small text-muted">Last Name</label>
											<input type="text" class="form-control form-control-sm" x-model="modalOrder.billing.last_name" :readonly="!editableBilling"/>
										</div>
									</div>
									<div class="mb-3">
										<label class="form-label small text-muted">Address</label>
										<input type="text" class="form-control form-control-sm" x-model="modalOrder.billing.address_1" :readonly="!editableBilling"/>
									</div>
									<div class="row">
										<div class="col-md-6 mb-3">
											<label class="form-label small text-muted">City</label>
											<input type="text" class="form-control form-control-sm" x-model="modalOrder.billing.city" :readonly="!editableBilling"/>
										</div>
										<div class="col-md-6 mb-3">
											<label class="form-label small text-muted">Postcode</label>
											<input type="text" class="form-control form-control-sm" x-model="modalOrder.billing.postcode" :readonly="!editableBilling"/>
										</div>
									</div>
									<div class="mb-3">
										<label class="form-label small text-muted">Email</label>
										<input type="email" class="form-control form-control-sm" x-model="modalOrder.billing.email" :readonly="!editableBilling"/>
									</div>
									<div class="mb-3">
										<label class="form-label small text-muted">Phone</label>
										<input type="tel" class="form-control form-control-sm" x-model="modalOrder.billing.phone" :readonly="!editableBilling"/>
									</div>
								</form>
							</div>
						</div>
						<!-- Shipping Column -->
						<div class="col-md-6 ps-md-4">
							<div class="bg-body-secondary p-3 rounded-2 h-100 border">
								<div class="d-flex justify-content-between align-items-center mb-3">
									<h6 class="text-muted fw-bold mb-0">
										<i class="bi bi-truck me-2 text-muted"></i>Shipping Information
									</h6>
									<button class="btn btn-sm btn-outline-primary" @click="toggleEditShipping">
										<i class="bi bi-pencil-square me-1"></i>Edit
									</button>
								</div>
								<form>
									<div class="mb-3">
										<label class="form-label small text-muted">First Name</label>
										<input type="text" class="form-control form-control-sm" x-model="modalOrder.shipping.first_name" :readonly="!editableShipping"/>
									</div>
									<div class="mb-3">
										<label class="form-label small text-muted">Address</label>
										<input type="text" class="form-control form-control-sm" x-model="modalOrder.shipping.address_1" :readonly="!editableShipping"/>
									</div>
									<div class="row">
										<div class="col-md-6 mb-3">
											<label class="form-label small text-muted">City</label>
											<input type="text" class="form-control form-control-sm" x-model="modalOrder.shipping.city" :readonly="!editableShipping"/>
										</div>
										<div class="col-md-6 mb-3">
											<label class="form-label small text-muted">Postcode</label>
											<input type="text" class="form-control form-control-sm" x-model="modalOrder.shipping.postcode" :readonly="!editableShipping"/>
										</div>
									</div>
									<div class="mb-3">
										<label class="form-label small text-muted">Customer Notes</label>
										<textarea class="form-control form-control-sm" rows="4" x-model="modalOrder.customer_notes" :readonly="!editableShipping"></textarea>
									</div>
								</form>
							</div>
						</div>
					</div>
					<!-- Order Details Section -->
					<div class="mt-4">
						<h6 class="text-muted fw-bold mb-3">
							<i class="bi bi-info-circle me-2 text-muted"></i>Order Details
						</h6>
						<div class="bg-body-secondary p-3 rounded-2 shadow-sm border">
							<div class="row g-3">
								<div class="col-md-4">
									<span class="d-block text-muted small text-muted">Order ID</span>
									<strong x-text="modalOrder.orderId"></strong>
								</div>
								<div class="col-md-4">
									<span class="d-block text-muted small text-muted">Total Amount</span>
									<strong x-text="modalOrder.total_amount"></strong>
								</div>
								<div class="col-md-4">
									<span class="d-block text-muted small text-muted">Status</span>
									<strong x-text="modalOrder.status" class="text-primary"></strong>
								</div>
							</div>
							<div class="mt-3">
								<span class="d-block text-muted small text-muted">Payment Method</span>
								<strong x-text="modalOrder.payment_method"></strong>
							</div>
						</div>
						<!-- Products List -->
						<div class="mt-4">
							<h6 class="text-muted fw-bold mb-3">
								<i class="bi bi-box-seam me-2 text-muted"></i>Products
							</h6>
							<div class="table-responsive" style="max-height: 200px;">
								<table class="table table-sm table-hover align-middle">
									<thead class="body-secondary">
										<tr>
											<th class="text-muted small fw-bold text-muted">Product</th>
											<th class="text-muted small fw-bold text-center text-muted">Qty</th>
											<th class="text-muted small fw-bold text-end text-muted">Price</th>
										</tr>
									</thead>
									<tbody>
										<template x-for="product in modalOrder.products" :key="product.id">
											<tr>
												<td x-text="product.name"></td>
												<td x-text="product.quantity" class="text-center"></td>
												<td x-text="product.price" class="text-end"></td>
											</tr>
										</template>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer border-0 pt-0">
					<button type="button" class="btn btn-outline-secondary rounded-1 px-4" @click="closeModal">Close</button>
					<button type="button" class="btn btn-primary rounded-1 px-4" @click="saveChanges">Save Changes</button>
				</div>
			</div>
		</div>
	</div>
}
