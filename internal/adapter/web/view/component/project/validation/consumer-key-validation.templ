package views

templ DomainKeyValidation(valid bool, consumerKey, consumerSecret string, errors map[string](string)) {
	<div class="row align-items-center g-3 mt-6">
		<div class="col-md-2">
			<label class="form-label mb-0">Consumer key</label>
		</div>
		<div class="col-md-8 col-xl-5">
			if errors["consumer_key"] != "" {
				<input
					name="consumer_key"
					type="password"
					class="form-control is-invalid"
					placeholder="Consumer key"
					autocomplete="off"
					value={ consumerKey }
					hx-post="/project/validation/key"
					hx-target="#key-validation"
				/>
				<div class="invalid-feedback" style="display: block;">
					{ errors["consumer_key"] }
				</div>
			} else {
				<input
					name="consumer_key"
					type="password"
					class="form-control"
					placeholder="Consumer key"
					autocomplete="off"
					value={ consumerKey }
					hx-post="/project/validation/key"
					hx-target="#key-validation"
				/>
			}
		</div>
		<div class="col-md-2">
			<a href="https://woocommerce.com/document/woocommerce-rest-api/" target="_blank" class="tooltip-container">
				<i class="bi bi-info-circle"></i>
				<span class="tooltip-text"></span>
			</a>
		</div>
	</div>
	<hr class="my-6"/>
	<div class="row align-items-center g-3 mt-6">
		<div class="col-md-2">
			<label class="form-label mb-0">Consumer secret</label>
		</div>
		<div class="col-md-8 col-xl-5">
			if errors["consumer_secret"] != "" {
				<input
					name="consumer_secret"
					type="password"
					class="form-control is-invalid"
					placeholder="Consumer secret"
					autocomplete="off"
					value={ consumerSecret }
					hx-post="/project/validation/key"
					hx-target="#key-validation"
				/>
				<div class="invalid-feedback" style="display: block;">
					{ errors["consumer_secret"] }
				</div>
			} else {
				<input
					name="consumer_secret"
					type="password"
					class="form-control"
					placeholder="Consumer secret"
					autocomplete="off"
					value={ consumerSecret }
					hx-post="/project/validation/key"
					hx-target="#key-validation"
				/>
			}
		</div>
		<div class="col-md-2">
			<a href="https://woocommerce.com/document/woocommerce-rest-api/" target="_blank" class="tooltip-container">
				<i class="bi bi-info-circle"></i>
				<span class="tooltip-text"></span>
			</a>
		</div>
	</div>
}
